[flake8]
# Maximum line length
max-line-length = 88

# Extend ignore list (compatible with Black formatter)
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by Black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file (common in Odoo modules)

# Exclude directories
exclude =
    __pycache__,
    .git,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    */migrations/*,
    */static/*,
    */i18n/*,
    filestore,
    .pytest_cache,
    node_modules,
    cypress

# Maximum complexity threshold
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403

# Plugins
# enable-extensions = flake8-docstrings

# Statistics
statistics = True
count = True
