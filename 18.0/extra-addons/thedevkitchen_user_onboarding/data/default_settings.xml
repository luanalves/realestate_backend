<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Singleton Record for Email Link Settings -->
        <record id="default_email_link_settings" model="thedevkitchen.email.link.settings">
            <field name="name">Email Link Configuration</field>
            <field name="invite_link_ttl_hours">24</field>
            <field name="reset_link_ttl_hours">24</field>
            <field name="frontend_base_url">http://localhost:3000</field>
            <field name="max_resend_attempts">5</field>
            <field name="rate_limit_forgot_per_hour">3</field>
        </record>
        
        <!-- Cron Job: Daily Token Cleanup -->
        <record id="cron_cleanup_expired_tokens" model="ir.cron">
            <field name="name">User Onboarding: Cleanup Expired Tokens</field>
            <field name="model_id" ref="model_thedevkitchen_password_token"/>
            <field name="state">code</field>
            <field name="code">model._cron_cleanup_expired_tokens()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>
        
    </data>
</odoo>
