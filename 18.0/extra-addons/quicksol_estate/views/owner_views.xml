<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- T040: Owner List View (accessible from Company) -->
        <record id="view_owner_tree" model="ir.ui.view">
            <field name="name">res.users.owner.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Estate Owners">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="estate_company_ids" widget="many2many_tags"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- T040: Owner Form View -->
        <record id="view_owner_form" model="ir.ui.view">
            <field name="name">res.users.owner.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Estate Owner">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Owner Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Contact Information">
                                <field name="email" widget="email" placeholder="email@example.com"/>
                                <field name="phone" placeholder="(XX) XXXX-XXXX"/>
                                <field name="mobile" placeholder="(XX) 9XXXX-XXXX"/>
                            </group>
                            
                            <group string="Access">
                                <field name="active"/>
                                <field name="login" readonly="1"/>
                                <field name="groups_id" widget="many2many_tags" readonly="1"/>
                            </group>
                        </group>
                        
                        <group string="Companies">
                            <field name="estate_company_ids" widget="many2many_tags" 
                                   options="{'no_create': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- T041: Owner Search View with Estate Owners filter -->
        <record id="view_owner_search" model="ir.ui.view">
            <field name="name">res.users.owner.search</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <search string="Search Owners">
                    <field name="name" string="Owner" filter_domain="['|', ('name', 'ilike', self), ('email', 'ilike', self)]"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="estate_company_ids"/>
                    
                    <filter name="active_owners" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive_owners" string="Inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <!-- T041: Estate Owners filter -->
                    <filter name="estate_owners" string="Estate Owners" 
                            domain="[('groups_id', 'in', [ref('quicksol_estate.group_real_estate_owner')])]"/>
                    
                    <filter name="with_companies" string="With Companies" 
                            domain="[('estate_company_ids', '!=', False)]"/>
                    <filter name="no_companies" string="Without Companies" 
                            domain="[('estate_company_ids', '=', False)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter name="group_by_company" string="Company" context="{'group_by': 'estate_company_ids'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- T040: Owner List Action (from Company form) -->
        <record id="action_owner_list" model="ir.actions.act_window">
            <field name="name">Estate Owners</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('groups_id', 'in', [ref('quicksol_estate.group_real_estate_owner')])]</field>
            <field name="context">{
                'search_default_active_owners': 1,
                'search_default_estate_owners': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Estate Owners found
                </p>
                <p>
                    Estate Owners can create and manage real estate companies.
                    They have full access to their company's data.
                </p>
            </field>
        </record>
        
        <!-- T041: Extend Users view to add Estate Owners filter -->
        <record id="view_users_search_inherit_owners" model="ir.ui.view">
            <field name="name">res.users.search.inherit.owners</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive_users']" position="after">
                    <separator/>
                    <!-- T041: Add Estate Owners filter to main Users list -->
                    <filter name="filter_estate_owners" string="Estate Owners" 
                            domain="[('groups_id', 'in', [ref('quicksol_estate.group_real_estate_owner')])]"/>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
