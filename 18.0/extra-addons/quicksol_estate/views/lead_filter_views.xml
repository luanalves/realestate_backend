<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- TREE VIEW: Saved Filters List -->
    <!-- ============================================================ -->
    <record id="view_lead_filter_tree" model="ir.ui.view">
        <field name="name">real.estate.lead.filter.tree</field>
        <field name="model">real.estate.lead.filter</field>
        <field name="arch" type="xml">
            <list string="Saved Lead Filters">
                <field name="name"/>
                <field name="user_id"/>
                <field name="is_shared" widget="boolean_toggle"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- FORM VIEW: Saved Filter Details -->
    <!-- ============================================================ -->
    <record id="view_lead_filter_form" model="ir.ui.view">
        <field name="name">real.estate.lead.filter.form</field>
        <field name="model">real.estate.lead.filter</field>
        <field name="arch" type="xml">
            <form string="Saved Lead Filter">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="is_shared"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Filter Criteria">
                        <field name="filter_domain" widget="text"/>
                    </group>
                    
                    <footer>
                        <button name="apply_filter" string="Apply Filter" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- SEARCH VIEW: Filters -->
    <!-- ============================================================ -->
    <record id="view_lead_filter_search" model="ir.ui.view">
        <field name="name">real.estate.lead.filter.search</field>
        <field name="model">real.estate.lead.filter</field>
        <field name="arch" type="xml">
            <search string="Search Saved Filters">
                <field name="name"/>
                <field name="user_id"/>
                
                <filter string="My Filters" name="my_filters" domain="[('user_id', '=', uid)]"/>
                <filter string="Shared Filters" name="shared" domain="[('is_shared', '=', True)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Owner" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Shared Status" name="group_shared" context="{'group_by': 'is_shared'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- ACTION: Saved Filters -->
    <!-- ============================================================ -->
    <record id="action_lead_filter" model="ir.actions.act_window">
        <field name="name">Saved Filters</field>
        <field name="res_model">real.estate.lead.filter</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_filters': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Save your first search filter
            </p>
            <p>
                Create reusable search filters to quickly find leads matching specific criteria.
            </p>
        </field>
    </record>
    
    <!-- ============================================================ -->
    <!-- MENU ITEM: Saved Filters (under Leads menu) -->
    <!-- ============================================================ -->
    <menuitem
        id="menu_lead_filters"
        name="Saved Filters"
        parent="menu_real_estate_lead"
        action="action_lead_filter"
        sequence="20"/>

</odoo>
