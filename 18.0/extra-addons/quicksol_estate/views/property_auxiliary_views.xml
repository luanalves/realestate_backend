<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== PROPERTY OWNER VIEWS ========== -->
    <record id="action_property_owner" model="ir.actions.act_window">
        <field name="name">Property Owners</field>
        <field name="res_model">real.estate.property.owner</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_property_owner_form" model="ir.ui.view">
        <field name="name">real.estate.property.owner.form</field>
        <field name="model">real.estate.property.owner</field>
        <field name="arch" type="xml">
            <form string="Property Owner">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_property)d" type="action" class="oe_stat_button" icon="fa-building">
                            <field name="property_count" widget="statinfo" string="Properties"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Owner Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Personal Information">
                            <field name="cpf" placeholder="000.000.000-00"/>
                            <field name="cnpj" placeholder="00.000.000/0000-00"/>
                            <field name="rg"/>
                            <field name="birth_date"/>
                            <field name="marital_status"/>
                            <field name="nationality"/>
                        </group>
                        <group string="Contact Information">
                            <field name="email" widget="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="whatsapp"/>
                        </group>
                    </group>
                    
                    <group string="Address">
                        <group>
                            <field name="zip_code" placeholder="00000-000"/>
                            <field name="country_id"/>
                            <field name="state"/>
                            <field name="city"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_owner_list" model="ir.ui.view">
        <field name="name">real.estate.property.owner.list</field>
        <field name="model">real.estate.property.owner</field>
        <field name="arch" type="xml">
            <list string="Property Owners">
                <field name="name"/>
                <field name="cpf"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="city"/>
                <field name="property_count"/>
            </list>
        </field>
    </record>

    <record id="view_property_owner_search" model="ir.ui.view">
        <field name="name">real.estate.property.owner.search</field>
        <field name="model">real.estate.property.owner</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="cpf"/>
                <field name="cnpj"/>
                <field name="email"/>
                <field name="city"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ========== PROPERTY BUILDING VIEWS ========== -->
    <record id="action_property_building" model="ir.actions.act_window">
        <field name="name">Buildings/Condominiums</field>
        <field name="res_model">real.estate.property.building</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_property_building_form" model="ir.ui.view">
        <field name="name">real.estate.property.building.form</field>
        <field name="model">real.estate.property.building</field>
        <field name="arch" type="xml">
            <form string="Building/Condominium">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_property)d" type="action" class="oe_stat_button" icon="fa-building">
                            <field name="property_count" widget="statinfo" string="Properties"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Building/Condominium Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="total_floors"/>
                            <field name="total_units"/>
                            <field name="construction_year"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="monthly_fee" widget="monetary"/>
                        </group>
                        <group string="Location">
                            <field name="zip_code" placeholder="00000-000"/>
                            <field name="country_id"/>
                            <field name="state"/>
                            <field name="city"/>
                            <field name="address"/>
                        </group>
                    </group>
                    
                    <group string="Amenities">
                        <group>
                            <field name="has_elevator" widget="boolean"/>
                            <field name="has_security" widget="boolean"/>
                            <field name="has_pool" widget="boolean"/>
                            <field name="has_gym" widget="boolean"/>
                        </group>
                        <group>
                            <field name="has_playground" widget="boolean"/>
                            <field name="has_party_room" widget="boolean"/>
                            <field name="has_sports_court" widget="boolean"/>
                        </group>
                    </group>
                    
                    <group string="Administrator">
                        <group>
                            <field name="administrator_name"/>
                            <field name="administrator_phone"/>
                            <field name="administrator_email" widget="email"/>
                        </group>
                    </group>
                    
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_building_list" model="ir.ui.view">
        <field name="name">real.estate.property.building.list</field>
        <field name="model">real.estate.property.building</field>
        <field name="arch" type="xml">
            <list string="Buildings/Condominiums">
                <field name="name"/>
                <field name="city"/>
                <field name="total_floors"/>
                <field name="total_units"/>
                <field name="monthly_fee"/>
                <field name="property_count"/>
            </list>
        </field>
    </record>

    <!-- ========== PROPERTY TAG VIEWS ========== -->
    <record id="view_property_tag_form" model="ir.ui.view">
        <field name="name">real.estate.property.tag.form</field>
        <field name="model">real.estate.property.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_tag_list" model="ir.ui.view">
        <field name="name">real.estate.property.tag.list</field>
        <field name="model">real.estate.property.tag</field>
        <field name="arch" type="xml">
            <list string="Property Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- ========== PROPERTY PHOTO VIEWS ========== -->
    <record id="view_property_photo_form" model="ir.ui.view">
        <field name="name">real.estate.property.photo.form</field>
        <field name="model">real.estate.property.photo</field>
        <field name="arch" type="xml">
            <form string="Property Photo">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="is_main" widget="boolean"/>
                        <field name="sequence"/>
                        <field name="property_id"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========== PROPERTY DOCUMENT VIEWS ========== -->
    <record id="view_property_document_form" model="ir.ui.view">
        <field name="name">real.estate.property.document.form</field>
        <field name="model">real.estate.property.document</field>
        <field name="arch" type="xml">
            <form string="Property Document">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="property_id"/>
                            <field name="is_confidential" widget="boolean"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group string="File">
                        <field name="file" filename="file_name"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
