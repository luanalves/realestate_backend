<odoo>

    <record id="action_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">real.estate.agent</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_agent_form" model="ir.ui.view">
        <field name="name">real.estate.agent.form</field>
        <field name="model">real.estate.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="years_experience"/>
                            <field name="agency_name"/>
                            <field name="company_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_agent_tree" model="ir.ui.view">
        <field name="name">real.estate.agent.list</field>
        <field name="model">real.estate.agent</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="years_experience"/>
                <field name="company_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>
</odoo>
