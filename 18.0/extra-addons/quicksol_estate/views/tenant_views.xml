<odoo>
     <record id="action_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">real.estate.tenant</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_tenant_tree" model="ir.ui.view">
        <field name="name">tenant.list</field>
        <field name="model">real.estate.tenant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="occupation"/>
                <field name="company_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_tenant_form" model="ir.ui.view">
        <field name="name">tenant.form</field>
        <field name="model">real.estate.tenant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="profile_picture" widget="image"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="company_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="occupation"/>
                        <field name="birthdate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
