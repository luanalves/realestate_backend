<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- KANBAN VIEW: Property Assignments -->
    <!-- ============================================================ -->
    <record id="view_assignment_kanban" model="ir.ui.view">
        <field name="name">real.estate.agent.property.assignment.kanban</field>
        <field name="model">real.estate.agent.property.assignment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="responsibility_type">
                <field name="agent_id"/>
                <field name="property_id"/>
                <field name="responsibility_type"/>
                <field name="assignment_date"/>
                <field name="active"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value ? '' : 'o_kanban_disabled'}">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="property_id"/>
                                    </div>
                                    <div class="o_secondary">
                                        <field name="agent_id"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Type:</strong>
                                        <field name="responsibility_type"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Date:</strong>
                                        <field name="assignment_date"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_footer">
                                <div class="o_kanban_card_manage_pane">
                                    <div class="row">
                                        <div class="col-6">
                                            <field name="active" widget="boolean_toggle"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- TREE VIEW: Property Assignments List -->
    <!-- ============================================================ -->
    <record id="view_assignment_tree" model="ir.ui.view">
        <field name="name">real.estate.agent.property.assignment.tree</field>
        <field name="model">real.estate.agent.property.assignment</field>
        <field name="arch" type="xml">
            <list string="Property Assignments" 
                  decoration-success="active==True" 
                  decoration-muted="active==False">
                <field name="agent_id"/>
                <field name="property_id"/>
                <field name="responsibility_type"/>
                <field name="assignment_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- FORM VIEW: Assignment Details -->
    <!-- ============================================================ -->
    <record id="view_assignment_form" model="ir.ui.view">
        <field name="name">real.estate.agent.property.assignment.form</field>
        <field name="model">real.estate.agent.property.assignment</field>
        <field name="arch" type="xml">
            <form string="Property Assignment">
                <header>
                    <field name="active" widget="boolean_button" options="{'terminology': 'active'}"/>
                </header>
                <sheet>
                    <group>
                        <group name="assignment_info" string="Assignment Information">
                            <field name="agent_id" required="1"/>
                            <field name="property_id" required="1"/>
                            <field name="responsibility_type" required="1"/>
                        </group>
                        <group name="dates" string="Assignment Period">
                            <field name="assignment_date" required="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this assignment..."/>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- SEARCH VIEW: Assignment Filters -->
    <!-- ============================================================ -->
    <record id="view_assignment_search" model="ir.ui.view">
        <field name="name">real.estate.agent.property.assignment.search</field>
        <field name="model">real.estate.agent.property.assignment</field>
        <field name="arch" type="xml">
            <search string="Search Assignments">
                <field name="agent_id"/>
                <field name="property_id"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Sales" name="sales" domain="[('responsibility_type', '=', 'primary')]"/>
                <filter string="Support" name="support" domain="[('responsibility_type', '=', 'support')]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Agent" name="group_agent" context="{'group_by': 'agent_id'}"/>
                    <filter string="Property" name="group_property" context="{'group_by': 'property_id'}"/>
                    <filter string="Responsibility Type" name="group_type" context="{'group_by': 'responsibility_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- ACTION: Open Property Assignments -->
    <!-- ============================================================ -->
    <record id="action_assignment" model="ir.actions.act_window">
        <field name="name">Property Assignments</field>
        <field name="res_model">real.estate.agent.property.assignment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property assignment!
            </p>
            <p>
                Assign agents to properties for sales or rental management.
            </p>
        </field>
    </record>

</odoo>
