        <!-- Property Tags -->
        <record id="property_tag_luxury" model="real.estate.property.tag">
            <field name="name">Luxury</field>
            <field name="color">5</field>
        </record>

        <record id="property_tag_new_construction" model="real.estate.property.tag">
            <field name="name">New Construction</field>
            <field name="color">3</field>
        </record>

        <record id="property_tag_ocean_view" model="real.estate.property.tag">
            <field name="name">Ocean View</field>
            <field name="color">1</field>
        </record>

        <record id="property_tag_furnished" model="real.estate.property.tag">
            <field name="name">Furnished</field>
            <field name="color">4</field>
