        </record>

        <record id="property_type_land" model="real.estate.property.type">
            <field name="name">Land</field>
        </record>

        <record id="property_type_farm" model="real.estate.property.type">
            <field name="name">Farm/Ranch</field>
        </record>

        <record id="property_type_office" model="real.estate.property.type">
            <field name="name">Office</field>
        </record>

        <record id="property_type_store" model="real.estate.property.type">
            <field name="name">Store/Shop</field>
        </record>

        <record id="property_type_warehouse" model="real.estate.property.type">
