<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_oauth_token_tree" model="ir.ui.view">
        <field name="name">oauth.token.tree</field>
        <field name="model">oauth.token</field>
        <field name="arch" type="xml">
            <list string="OAuth Tokens" decoration-danger="revoked" decoration-muted="is_expired">
                <field name="application_id"/>
                <field name="access_token"/>
                <field name="expires_at"/>
                <field name="is_expired" widget="boolean" optional="show"/>
                <field name="revoked" widget="boolean" optional="show"/>
                <field name="last_used"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
                <button name="action_revoke" type="object" string="Revoke" 
                        icon="fa-ban" invisible="revoked"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_oauth_token_form" model="ir.ui.view">
        <field name="name">oauth.token.form</field>
        <field name="model">oauth.token</field>
        <field name="arch" type="xml">
            <form string="OAuth Token">
                <header>
                    <button name="action_revoke" type="object" string="Revoke Token" 
                            class="btn-danger" invisible="revoked"
                            confirm="Are you sure you want to revoke this token?"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Revoked" bg_color="text-bg-danger" 
                            invisible="not revoked"/>
                    <widget name="web_ribbon" title="Expired" bg_color="text-bg-warning" 
                            invisible="not is_expired or revoked"/>
                    <group>
                        <group>
                            <field name="application_id"/>
                            <field name="token_type" readonly="1"/>
                            <field name="scope"/>
                        </group>
                        <group>
                            <field name="expires_at" readonly="1"/>
                            <field name="is_expired" readonly="1"/>
                            <field name="last_used" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Token Details">
                        <group>
                            <field name="access_token" readonly="1" password="True"/>
                        </group>
                        <group>
                            <field name="refresh_token" readonly="1" password="True"/>
                        </group>
                    </group>
                    <group string="Revocation Info" invisible="not revoked">
                        <group>
                            <field name="revoked" readonly="1"/>
                            <field name="revoked_at" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_oauth_token_search" model="ir.ui.view">
        <field name="name">oauth.token.search</field>
        <field name="model">oauth.token</field>
        <field name="arch" type="xml">
            <search string="OAuth Tokens">
                <field name="application_id"/>
                <field name="access_token"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True), ('revoked', '=', False)]"/>
                <filter string="Revoked" name="revoked" domain="['|', ('active', '=', True), ('active', '=', False), ('revoked', '=', True)]"/>
                <filter string="Expired" name="expired" domain="[('is_expired', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Application" name="group_application" context="{'group_by': 'application_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'revoked'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_oauth_token" model="ir.actions.act_window">
        <field name="name">OAuth Tokens</field>
        <field name="res_model">oauth.token</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'active_test': False}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No tokens found
            </p>
            <p>
                Tokens are automatically created when clients authenticate via the OAuth 2.0 flow.
                Use the filters above to show active, revoked, or expired tokens.
            </p>
        </field>
    </record>

</odoo>
