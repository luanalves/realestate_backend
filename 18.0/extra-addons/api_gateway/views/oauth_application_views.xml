<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_oauth_application_tree" model="ir.ui.view">
        <field name="name">oauth.application.tree</field>
        <field name="model">oauth.application</field>
        <field name="arch" type="xml">
            <list string="OAuth Applications">
                <field name="name"/>
                <field name="client_id"/>
                <field name="token_count"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="created_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_oauth_application_form" model="ir.ui.view">
        <field name="name">oauth.application.form</field>
        <field name="model">oauth.application</field>
        <field name="arch" type="xml">
            <form string="OAuth Application">
                <header>
                    <button name="action_regenerate_secret" type="object" 
                            string="Regenerate Secret" 
                            class="btn-warning"
                            confirm="This will revoke all existing tokens. Continue?"/>
                    <button name="action_view_tokens" type="object" 
                            string="View Tokens" 
                            class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tokens" type="object" class="oe_stat_button" icon="fa-key">
                            <field name="token_count" widget="statinfo" string="Active Tokens"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Application Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" readonly="1" widget="CopyClipboardChar"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="client_secret" readonly="1" widget="CopyClipboardChar" password="0"/>
                            <field name="created_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Application description..."/>
                    </group>
                    <notebook>
                        <page string="Tokens" name="tokens">
                            <field name="token_ids" readonly="1">
                                <list>
                                    <field name="access_token"/>
                                    <field name="expires_at"/>
                                    <field name="is_expired" widget="boolean"/>
                                    <field name="active" widget="boolean_toggle"/>
                                    <field name="last_used"/>
                                </list>
                            </field>
                        </page>
                        <page string="Security" name="security">
                            <group>
                                <group>
                                    <label for="client_id" string="Public Identifier"/>
                                    <div>
                                        <field name="client_id" readonly="1" class="oe_inline"/>
                                        <p class="text-muted">
                                            This is the public identifier for your application. 
                                            Share this with your API consumers.
                                        </p>
                                    </div>
                                </group>
                                <group>
                                    <label for="client_secret" string="Secret Key"/>
                                    <div>
                                        <field name="client_secret" readonly="1" widget="CopyClipboardChar" password="0" class="oe_inline"/>
                                        <p class="text-danger">
                                            ⚠️ Keep this secret secure! Never share it publicly. 
                                            If compromised, regenerate immediately.
                                        </p>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_oauth_application" model="ir.actions.act_window">
        <field name="name">OAuth Applications</field>
        <field name="res_model">oauth.application</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first OAuth Application
            </p>
            <p>
                OAuth applications allow external clients to authenticate and access your API endpoints securely.
            </p>
        </field>
    </record>

</odoo>
