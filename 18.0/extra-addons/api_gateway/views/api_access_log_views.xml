<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_api_access_log_tree" model="ir.ui.view">
        <field name="name">api.access.log.tree</field>
        <field name="model">api.access.log</field>
        <field name="arch" type="xml">
            <list string="API Access Logs" create="0" edit="0" delete="1">
                <field name="create_date" optional="show"/>
                <field name="method" optional="show"/>
                <field name="endpoint_path" optional="show"/>
                <field name="status_code" optional="show" decoration-success="success == True" decoration-danger="success == False"/>
                <field name="success" optional="show" invisible="1"/>
                <field name="response_time" optional="show"/>
                <field name="authenticated" optional="show"/>
                <field name="application_id" optional="show"/>
                <field name="ip_address" optional="hide"/>
                <field name="error_code" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_api_access_log_form" model="ir.ui.view">
        <field name="name">api.access.log.form</field>
        <field name="model">api.access.log</field>
        <field name="arch" type="xml">
            <form string="API Access Log" create="0" edit="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-check-circle" invisible="1">
                            <field name="success" widget="boolean_button"/>
                        </button>
                    </div>
                    <group>
                        <group string="Request Information">
                            <field name="create_date"/>
                            <field name="method"/>
                            <field name="endpoint_path"/>
                            <field name="endpoint_id"/>
                            <field name="query_params"/>
                        </group>
                        <group string="Response Information">
                            <field name="status_code"/>
                            <field name="success"/>
                            <field name="response_time"/>
                            <field name="error_code"/>
                        </group>
                    </group>
                    <group>
                        <group string="Authentication">
                            <field name="authenticated"/>
                            <field name="application_id"/>
                            <field name="token_id"/>
                        </group>
                        <group string="Client Information">
                            <field name="ip_address"/>
                            <field name="user_agent"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Request Body" name="request_body">
                            <field name="request_body" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Response Body" name="response_body">
                            <field name="response_body" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Error Details" name="error" invisible="not error_code">
                            <group>
                                <field name="error_description"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_api_access_log_search" model="ir.ui.view">
        <field name="name">api.access.log.search</field>
        <field name="model">api.access.log</field>
        <field name="arch" type="xml">
            <search string="Search API Logs">
                <field name="endpoint_path"/>
                <field name="application_id"/>
                <field name="ip_address"/>
                <field name="method"/>
                <separator/>
                <filter string="Success" name="filter_success" domain="[('success', '=', True)]"/>
                <filter string="Errors" name="filter_errors" domain="[('success', '=', False)]"/>
                <separator/>
                <filter string="Authenticated" name="filter_authenticated" domain="[('authenticated', '=', True)]"/>
                <filter string="Unauthenticated" name="filter_unauthenticated" domain="[('authenticated', '=', False)]"/>
                <separator/>
                <filter string="GET" name="filter_get" domain="[('method', '=', 'GET')]"/>
                <filter string="POST" name="filter_post" domain="[('method', '=', 'POST')]"/>
                <filter string="PUT" name="filter_put" domain="[('method', '=', 'PUT')]"/>
                <filter string="DELETE" name="filter_delete" domain="[('method', '=', 'DELETE')]"/>
                <separator/>
                <filter string="Today" name="filter_today" domain="[('create_date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                <filter string="Last 7 Days" name="filter_week" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 30 Days" name="filter_month" domain="[('create_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Endpoint" name="group_endpoint" context="{'group_by': 'endpoint_path'}"/>
                    <filter string="Method" name="group_method" context="{'group_by': 'method'}"/>
                    <filter string="Application" name="group_application" context="{'group_by': 'application_id'}"/>
                    <filter string="Status Code" name="group_status" context="{'group_by': 'status_code'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_api_access_log_graph" model="ir.ui.view">
        <field name="name">api.access.log.graph</field>
        <field name="model">api.access.log</field>
        <field name="arch" type="xml">
            <graph string="API Access Statistics">
                <field name="endpoint_path"/>
                <field name="status_code" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_api_access_log_pivot" model="ir.ui.view">
        <field name="name">api.access.log.pivot</field>
        <field name="model">api.access.log</field>
        <field name="arch" type="xml">
            <pivot string="API Access Analysis">
                <field name="endpoint_path" type="row"/>
                <field name="method" type="col"/>
                <field name="response_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_api_access_log" model="ir.actions.act_window">
        <field name="name">API Access Logs</field>
        <field name="res_model">api.access.log</field>
        <field name="view_mode">list,form,graph,pivot</field>
        <field name="context">{'search_default_filter_week': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No API access logs yet
            </p>
            <p>
                API access logs will appear here automatically when endpoints are called.
                This helps you monitor API usage, debug issues, and analyze performance.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_api_access_log"
              name="Access Logs"
              parent="menu_api_gateway_root"
              action="action_api_access_log"
              sequence="40"
              groups="base.group_no_one"/>

</odoo>
