<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_api_endpoint_tree" model="ir.ui.view">
        <field name="name">thedevkitchen.api.endpoint.tree</field>
        <field name="model">thedevkitchen.api.endpoint</field>
        <field name="arch" type="xml">
            <list string="API Endpoints" create="1" edit="1" delete="1">
                <field name="module_name" optional="show"/>
                <field name="method" optional="show"/>
                <field name="path" optional="show"/>
                <field name="name" optional="show"/>
                <field name="protected" optional="show"/>
                <field name="active" optional="show"/>
                <field name="call_count" optional="show"/>
                <field name="last_called" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_api_endpoint_form" model="ir.ui.view">
        <field name="name">thedevkitchen.api.endpoint.form</field>
        <field name="model">thedevkitchen.api.endpoint</field>
        <field name="arch" type="xml">
            <form string="API Endpoint">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="module_name"/>
                            <field name="path"/>
                            <field name="method"/>
                            <field name="protected"/>
                        </group>
                        <group string="Statistics">
                            <field name="call_count"/>
                            <field name="last_called"/>
                        </group>
                    </group>
                    <group string="Documentation">
                        <field name="summary"/>
                        <field name="tags"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Request Schema" name="request_schema">
                            <field name="request_schema" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                        <page string="Response Schema" name="response_schema">
                            <field name="response_schema" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_api_endpoint_search" model="ir.ui.view">
        <field name="name">thedevkitchen.api.endpoint.search</field>
        <field name="model">thedevkitchen.api.endpoint</field>
        <field name="arch" type="xml">
            <search string="Search API Endpoints">
                <field name="name"/>
                <field name="path"/>
                <field name="module_name"/>
                <field name="method"/>
                <separator/>
                <filter string="Protected" name="filter_protected" domain="[('protected', '=', True)]"/>
                <filter string="Public" name="filter_public" domain="[('protected', '=', False)]"/>
                <separator/>
                <filter string="GET" name="filter_get" domain="[('method', '=', 'GET')]"/>
                <filter string="POST" name="filter_post" domain="[('method', '=', 'POST')]"/>
                <filter string="PUT" name="filter_put" domain="[('method', '=', 'PUT')]"/>
                <filter string="DELETE" name="filter_delete" domain="[('method', '=', 'DELETE')]"/>
                <separator/>
                <filter string="Active" name="filter_active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="filter_archived" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Module" name="group_module" context="{'group_by': 'module_name'}"/>
                    <filter string="Method" name="group_method" context="{'group_by': 'method'}"/>
                    <filter string="Protected" name="group_protected" context="{'group_by': 'protected'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_api_endpoint" model="ir.actions.act_window">
        <field name="name">API Endpoints</field>
        <field name="res_model">thedevkitchen.api.endpoint</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a new API Endpoint
            </p>
            <p>
                This registry allows modules to declare their REST API endpoints.
                Other modules can register their endpoints here for documentation and access control.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_api_endpoint"
              name="API Endpoints"
              parent="menu_api_gateway_root"
              action="action_api_endpoint"
              sequence="30"
              groups="base.group_no_one"/>

</odoo>
